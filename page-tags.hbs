{{!-- 自定义归档页 --}}
{{!< default}}
{{#post}}
{{!-- 封面图 --}}
<div class="hero author">
    <div class="hero__wrapper">
        <figure class="hero__image">
            {{#if feature_image}}
            <img class="hero__image-img lazyload" data-src="{{feature_image}}" data-srcset="{{feature_image}}"
                data-sizes="auto" height="3070" width="5464" alt="{{title}}" />
            {{/if}}
        </figure>
        <div class="hero__inner">
            <h1>
                {{t title}}
            </h1>
        </div>
    </div>
</div>
{{!-- 内容 --}}
<main class="main main--with-pagination">
    <div class="wrapper">
        <div class="page">
            <div class="page__grid">
                {{#get 'tags' limit='10000' include='count.posts' order='count.posts desc'}}

                {{#foreach tags}}
                <article class="page__item {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
                    <div class="divider divider--center">
                        <div class="page__item-image page__item-image--wide">
                            <a href="{{url}}" class="page__item-image__wrap page__item-image__wrap--link"
                                style="padding-bottom: calc(1548/2600 * 100%)">
                                {{#if feature_image}}
                                <img class="lazyload" data-src="{{feature_image}}" data-srcset="{{feature_image}}"
                                    data-sizes="auto" height="1548" width="2600"
                                    alt="{{title}}" />
                                {{else}}
                                <img class="lazyload" data-src="{{asset "img/placeholder.jpg"}}"
                                    data-srcset="{{asset "img/placeholder.jpg"}}"
                                    data-sizes="auto" height="1548" width="2600" alt="{{title}}" />
                                {{/if}}
                            </a>
                        </div>
                        <header class="page__item-image">
                            <h2 class="page__item-title">
                                <a href="{{url}}" class="invert">
                                    {{ name }}({{ count.posts }} {{t "posts"}})
                                </a>
                            </h2>
                        </header>
                    </div>
                </article>
                {{/foreach}}

                {{/get}}
            </div>
        </div>
    </div>
</main>

{{/post}}