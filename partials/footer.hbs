{{> myinstagram}}
<footer class="footer">
    <div class="wrapper">
        <div>
            {{#if @site.title}}
            <a href="/" class="footer__logo">{{@site.title}}</a>
            {{else}}
            <a href="/" class="footer__logo" alt="{{@site.title}}">
                <svg>
                    <use xlink:href="{{asset "img/svg-map.svg"}}#logo" /></svg>
            </a>
            {{/if}}
        </div>
        <ul class="footer__nav">
            <li>许可</li>
            <li>条款</li>
            <li>关于</li>
        </ul>
        <div class="footer__nav footer__copy">
            &copy; {{date format="YYYY"}} 
            Powered by Ghost. 
            Theme <a href="https://github.com/yehuzi/ghost-theme-quokka" target="_blank">Quokka</a> By <a href="https://yehuzi.com">@野胡子</a>
        </div>
        <div class="footer__social">
            <a href="" aria-label="Instagram" target="_blank" title="Instagram">
                <svg>
                    <use xlink:href="{{asset "img/svg-map.svg"}}#instagram" /></svg>
            </a>
            <a href="" aria-label="Github" target="_blank" title="Github">
                <svg>
                    <use xlink:href="{{asset "img/svg-map.svg"}}#github" /></svg>
            </a>
            <a href="" aria-label="Email" target="_blank" title="联系我">
                <svg>
                    <use xlink:href="{{asset "img/svg-map.svg"}}#email" /></svg>
            </a>
            <a href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" aria-label="Rss" target="_blank"
                title="订阅">
                <svg>
                    <use xlink:href="{{asset "img/svg-map.svg"}}#rss" /></svg>
            </a>
        </div>
    </div>
    <button class="footer__bttop js-footer__bttop" aria-label="Back to top">
        <svg>
            <title>Back to top</title>
            <use xlink:href="{{asset "img/svg-map.svg"}}#toparrow" />
        </svg>
    </button>
</footer>